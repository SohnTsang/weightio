rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---- Public, read-only reference data ----
    match /exercises/{id} { allow read: if true; allow write: if false; }
    match /plan_templates/{id} { allow read: if true; allow write: if false; }
    match /ingredients/{id} { allow read: if true; allow write: if false; }
    match /supplements/{id} { allow read: if true; allow write: if false; }
    match /calculator_constants/{id} { allow read: if true; allow write: if false; }

    // ---- User-scoped data (only the owner) ----
    match /users/{uid}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // ---- Deny everything else by default ----
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
